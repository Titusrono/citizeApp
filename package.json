{
  "name": "citizen-connect-monorepo",
  "version": "1.0.0",
  "description": "CitizenConnect - Monorepo containing frontend (ui) and backend (api)",
  "private": true,
  "workspaces": [
    "ui",
    "api"
  ],
  "scripts": {
    "dev": "concurrently --names \"API,UI\" --prefix-colors \"blue,green\" \"pnpm --filter api dev\" \"pnpm --filter ui dev\"",
    "dev:api": "pnpm --filter api dev",
    "dev:ui": "pnpm --filter ui dev",
    "start": "pnpm run dev",
    "start:api": "pnpm --filter api start",
    "start:ui": "pnpm --filter ui start",
    "build": "pnpm --filter api build && pnpm --filter ui build",
    "build:api": "pnpm --filter api build",
    "build:ui": "pnpm --filter ui build",
    "test": "pnpm --filter api test && pnpm --filter ui test",
    "test:api": "pnpm --filter api test",
    "test:ui": "pnpm --filter ui test",
    "clean": "pnpm --filter api clean --if-present && pnpm --filter ui clean --if-present && rimraf node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/citizeApp.git"
  },
  "keywords": [
    "monorepo",
    "angular",
    "citizen-connect"
  ],
  "author": "",
  "license": "ISC"
}
